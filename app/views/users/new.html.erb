<div class="nline,bg">
<p class="NewUser-Title">Welcome new user!</p>

<section class="UsersNew">
  <%= form_with url: users_path do |form| %>
  <p style="color:red;">*note: Please type your role as "customer" to sign-up</p>
    <div class="Form-Section">
      <p class="FormInput-label">Role: </p>
      <%= form.text_field :role, class: "Form-Input"%>
    </div>
    <div class="Form-Section">
      <p class="FormInput-label">Name: </p>
      <%= form.text_field :name, class: "Form-Input"%>
    </div>
    <div class="Form-Section">
      <p class="FormInput-label">Email: </p>
      <%= form.email_field :email, class:"Form-Input" %>
    </div>
    <div class="Form-Section">
      <p class="FormInput-label">Phone number: </p>
      <%= form.text_field :phone, class:"Form-Input" %>
    </div>
     <div class="Form-Section">
      <p class="FormInput-label">Address: </p>
      <%= form.text_field :address, class:"Form-Input" %>
    </div>
    <div class="Form-Section">
      <p class="FormInput-label">Password: </p>
      <%= form.password_field :password, class:"Form-Input" %>
    </div>
    <div class="Form-Section">
      <%= form.submit "Sign-up!", class: "FormSubmit"%>
    </div>
  <% end%>
</section>
</div>
